<html ng-app="myApp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Sentiment Analyzer</title>

    @Styles.Render("~/Content/css")

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a href="../" class="navbar-brand">Sentiment Analyzer</a>
            </div>
            <div class="navbar-collapse collapse" id="navbar-main">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="#!/reviews">Reviews</a>
                    </li>
                    <li ng-if="isAuthenticated()">
                        <a href="#!/admin">Admin</a>
                    </li>
                </ul>

                <ul class="nav navbar-nav navbar-right" ng-if="!isAuthenticated()">
                    <li><a href="#!/login">Login</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right" ng-if="isAuthenticated()">
                    <li><a ng-click="logOff()">Log off</a></li>
                </ul>

            </div>
        </div>
    </div>
    <div class="container" style="margin-top: 0px;" ng-view="">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/angularConfig")
    @Scripts.Render("~/bundles/features")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)
    
</body>
</html>


